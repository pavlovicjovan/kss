<html>
    <head>
    	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
        <title>Dashboard page</title>
		<style>
		h1 {
		color:blue !important;
	    background-color:#A0A0A0 !important;
		border-bottom: 4px solid blue !important;
	    position:fixed !important;
	    width:100%;
	    z-index:99;
	 	}
		body {
		background-color:#778899 !important;
		}
		button {
		 background-color:white !important;
		}
		</style>
    </head>
    <body>
        <h1>Studentska stranica</h1></br></br></br></br></br>
        <div class="container">
        	<div class="row">
        		{{# each exercises }}
        		<div class="col-sm-6" style="background-color:#F5F5F5; outline: 1px solid black; margin-top: 10px;">
        			<a href="/exercises/{{ this.id }}">
        				<p>{{ this.subject }}</p>
        				<p>{{ this.number }}</p>
        			</a>
        		</div>
        		
        		{{/each}}
        	</div>
        </div></br></br>
      
		<button type="submit" class="btn btn-primary"><a href="/logout"><b>Logout</b></a></button>
    </body>
</html>